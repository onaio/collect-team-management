<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.ona.collect.android.team">

    <uses-permission android:name="org.odk.collect.android.permission.RECEIVE_BROADCASTS" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MessagesActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".receivers.ActivityStateChangedReceiver">
            <intent-filter>
                <action android:name="org.odk.collect.android.action.ACTIVITY_STATE_CHANGED" />
            </intent-filter>
        </receiver>
        <receiver android:name=".receivers.ServerSettingsChangedReceiver">
            <intent-filter>
                <action android:name="org.odk.collect.android.action.SERVER_SETTINGS_CHANGED" />
            </intent-filter>
        </receiver>

        <service
            android:name=".services.MessageOverlayService"
            android:enabled="true"
            android:exported="false" />

    </application>

</manifest>